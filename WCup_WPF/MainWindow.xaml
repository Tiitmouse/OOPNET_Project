        <Label Content="VS" HorizontalAlignment="Left" Margin="339,6,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.566,-0.083"/>
        <Label x:Name="favRepResult" Content="/" HorizontalAlignment="Left" Margin="311,6,0,0" VerticalAlignment="Top"/>
        <Label x:Name="rivalRepResult" Content="/" HorizontalAlignment="Left" Margin="379,6,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSettings" Content="⚙" HorizontalAlignment="Left" Height="22" Margin="764,8,0,0" VerticalAlignment="Top" Width="31"/>
        <Rectangle HorizontalAlignment="Left" Height="382" Margin="15,58,0,0" VerticalAlignment="Top" Width="780" Grid.ColumnSpan="2">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/WCup_WPF;component/footballField.png" Stretch="UniformToFill" />
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Postava omiljene reprezentacije" HorizontalAlignment="Left" Margin="35,27,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
